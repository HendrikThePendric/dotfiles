{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoupdate": true,
  "mcp": {
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "enabled": true,
      "timeout": 10000,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_API_KEY}"
      }
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
      "timeout": 10000
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "timeout": 10000
    },
    "neovim": {
      "type": "local",
      "command": ["npx", "-y", "mcp-neovim-server"],
      "enabled": true,
      "timeout": 10000
    }
  },
  "tools": {
    // Disable MCP tools globally by default, enable per-project as needed
    "github_*": false,
    "grep_*": false,
    "context7_*": false,
    "neovim_*": false
  },
  "permission": {
    // Deny MCP tools globally by default, allow per-project as needed
    "github_*": "deny",
    "grep_*": "deny",
    "context7_*": "deny",
    "neovim_*": "deny"
  }
}

