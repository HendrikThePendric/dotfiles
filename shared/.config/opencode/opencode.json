{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoupdate": true,
  "mcp": {
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "enabled": true,
      "timeout": 10000
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
      "timeout": 10000
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "timeout": 10000
    },
    "neovim": {
      "type": "local",
      "command": ["npx", "-y", "mcp-neovim-server"],
      "enabled": true,
      "timeout": 10000
    }
  },
  "tools": {
    // Disable potentially noisy MCP tools globally, enable per-project as needed
    "github_*": false,
    "grep_*": false,
    "context7_*": false,
    "neovim_*": false
  }
}

