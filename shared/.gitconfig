[user]
	name = Hendrik de Graaf
	# Email is machine-specific, set via environment variable
	# Add to ~/.config/env/env.local: export GIT_USER_EMAIL="your@email.com"
	email = ${GIT_USER_EMAIL}
	# GPG signing key (optional), set via environment variable
	# Add to ~/.config/env/env.local: export GPG_SIGNING_KEY="YOUR_KEY_ID"
	signingkey = ${GPG_SIGNING_KEY}

[core]
    pager = delta
    editor = nvim
    ignorecase = false

[interactive]
    diffFilter = delta --color-only

[delta]
    features = catppuccin-mocha
    navigate = true
    line-numbers = true
    side-by-side = false

[delta "catppuccin-mocha"]
	blame-palette = "#1e1e2e #181825 #11111b #313244 #45475a"
	commit-decoration-style = "#6c7086" bold box ul
	dark = true
	file-decoration-style = "#6c7086"
	file-style = "#cdd6f4"
	hunk-header-decoration-style = "#6c7086" box ul
	hunk-header-file-style = bold
	hunk-header-line-number-style = bold "#a6adc8"
	hunk-header-style = file line-number syntax
	line-numbers-left-style = "#6c7086"
	line-numbers-minus-style = bold "#f38ba8"
	line-numbers-plus-style = bold "#a6e3a1"
	line-numbers-right-style = "#6c7086"
	line-numbers-zero-style = "#6c7086"
	# 35% red 65% base
	minus-emph-style = bold syntax "#694559"
	# 20% red 80% base
	minus-style = syntax "#493447"
	# 35% green 65% base
	plus-emph-style = bold syntax "#4e6356"
	# 20% green 80% base
	plus-style = syntax "#394545"
	map-styles = \
		bold purple => syntax "#5b4e74", \
		bold blue => syntax "#445375", \
		bold cyan => syntax "#446170", \
		bold yellow => syntax "#6b635b"
	# Should match the name of the bat theme
    syntax-theme = Catppuccin Mocha

[diff]
    colorMoved = default

[commit]
	# Automatically sign commits with GPG (requires signingkey set)
	gpgsign = true

[push]
	# Automatically set up remote tracking for new branches
	autoSetupRemote = true

[pull]
	# Use rebase instead of merge when pulling
	rebase = true
